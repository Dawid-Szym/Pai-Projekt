@page
@model eKoncert.Pages.Shared.LoginModel

<div class="container">
    <h2>Login</h2>

    <form method="post">
        <div class="form-group">
            <h2></h2>
            <input type="text" class="form-control" name="Username" asp-for="Username" placeholder="Username" required />
        </div>
        <div class="form-group">
            <h2></h2>
            <input type="password" class="form-control" name="Password" asp-for="Password" placeholder="Password" required>
        </div>
        <div>
            <h2></h2>
            <button id="loginButton" type="submit" class="btn btn-primary">Login</button>
        </div>
    </form>
</div>