@page
@model EventsModel

<div class="container">
    <div class="row">
        @foreach (var eventItem in Model.Events)
        {
            <div class="col-md-4 mb-4 d-flex align-items-stretch">
                <div class="card" style="flex-direction: column;">
                    <div style="max-width: 500px; height: 300px; overflow: hidden; margin: 0 auto;">
                        <img src="@eventItem.Url" class="card-img-top" alt="Event Image" style="width: 100%; height: 100%; object-fit: cover;">
                    </div>
                    <div class="card-body text-center" style="flex-grow: 1; display: flex; align-items: center; justify-content: center;">
                        <h5 class="card-title" style="flex: 0;">@eventItem.Name</h5>
                    </div>

                </div>
            </div>
        }
    </div>
</div>



